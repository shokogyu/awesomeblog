<li id="micropost"-<%= micropost.id %>>
<!-- 	<%#= @user.name %> : <%= micropost.content %> -->
	<%= link_to gravatar_for(micropost.user, 50), micropost.user, class: 'gravatar' %>

	<span class="user">
<!-- 		<%#=link_to micropost.user.name, user_path(@user.id) %> -->
		<%= link_to micropost.user.name, micropost.user %>
	</span>

	<div>
		<span class="content">
			<%= micropost.content %>
 			<%= image_tag micropost.picture.url if micropost.picture? %>
		</span>
	</div>

	<span class="timestamp">
		Posted <%= time_ago_in_words(micropost.created_at) %>
	</span>

<!-- 	<#% if current_user == micropost.user %> -->
	<% if current_user?(micropost.user) %>
		<%= link_to "delete", micropost, method: :delete, data: { confirm: "Are you sure?"} %>
	<!-- 	<%#= link_to "delete", micropost_path(micropost.id) %> -->
	<% end %>
</li>
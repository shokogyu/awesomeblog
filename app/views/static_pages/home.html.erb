<% unless logged_in? %>
	<div class="jumbotron center">

		<h1>Awesome Blog Application</h1>
		<p>
			This is a blog like Twitter!! <br>
			This is the project under the <a href="">Kredo Japan</a> and 
			<a href="">Framgia PH</a>.
		</p>

		<div>
			<%= button_to "Sign Up Now", signup_path, method: :get, class: "btn btn-primary" %>
		</div>
	</div>

<% else %>
	<div class="row">
		<div class="col-md-4">
			<section>
				<%= render 'shared/user_info' %>
			</section>

			<section class="stats">
				<%= render 'shared/stats' %>				
			</section>

			<div class="microposts">
				<%= render 'shared/micropost_form' %>
			</div>

		</div>

		<div class="col-md-8">
			<%= will_paginate @feed_items %>
			<% if @feed_items.any? %>
				<ul class="microposts">
					<%= render @feed_items %>
				</ul>
 				<%= will_paginate @feed_items %>
			<% end %>
		</div>
	</div>
<% end %>
	